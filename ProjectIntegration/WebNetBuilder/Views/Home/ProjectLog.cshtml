@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-app="myApp" ng-controller="controllerCtrl">
    <ul class="nav nav-tabs" id="myTab">
        <li ng-repeat="p in list">
            <a href="#{{p.ProjectName}}" data-toggle="tab">{{p.ProjectName}}</a>
        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade" ng-repeat="p in list" id="{{p.ProjectName}}">


            <div class="panel-default">
                <div class="panel-heading">
                   <h3> 显示 {{p.Project}} 日志信息</h3>
                    <br/>
                   <div class="row">
                       <div class="col-lg-5">
                           <div class="input-group">
                               <span class="input-group-addon">下载日志：</span>
                               <input type="text" class="form-control" value="{{p.Logs.path}}" readonly="readonly" placeholder="{{c.Path}}" />
                           </div>
                       </div>
                       <div class="col-lg-5">
                           <button ng-click="loadLogs(p)" type="button" class="btn btn-default" aria-label="Left Align">
                               <span class="glyphicon glyphicon-refresh" aria-hidden="true"> 加载日志信息 </span>
                           </button>
                       </div>

                      
                   </div>
                </div>
            </div>
            <div class="panel-body">

                <textarea class="form-control" style="height:100vh">
                    {{ p.Logs.Value}}
                </textarea>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/view/ProjectLog.js"></script>